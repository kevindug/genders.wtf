{% if gender.widget and gender.widget !== "toggle" and gender.widget !== "menu" %}
  <div class="{% if addpadding %}pt-10{% endif %}">
  <form>
  {% if gender.prompt %}
  <label class="block tracking-wide text-gray-700 text-xs font-bold mb-2" for="gender-select">
    {{ gender.prompt }}
  </label>
  {% endif %}
  {% if gender.widget == "select" %}
    <select class="block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline" id="gender-select">
      {% for option in gender.options %}
      <option>{{ option }}</option>
      {% endfor %}
    </select>
    <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
      <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
    </div>
  {% endif %}
  {% if gender.widget == "radio" %}
   <div class={% if gender.radio.columns %}"flex flex-col"{% else %}"flex"{% endif %}>
   {% for option in gender.options %}
    <label class="inline-flex items-center m-3" >
      <input type="radio" class="form-radio h-5 w-5" name="gender-radio"><span class="ml-2 text-gray-700">{{ option }}</span>
    </label>
    {% endfor %}
    </div>
  {% endif %}
  {% if gender.widget == "checkboxes" %}
   <div class={% if gender.checkboxes.columns %}"flex flex-col"{% else %}"flex"{% endif %}>
   {% for option in gender.options %}
    <label class="inline-flex items-center m-3" >
      <input type="checkbox" class="form-checkbox h-5 w-5" name="gender-checkbox"><span class="ml-2 text-gray-700">{{ option }}</span>
    </label>
    {% endfor %}
    </div>
  {% endif %}
  {% if gender.widget == "number" && gender.label %}
    <label class="inline-flex items-center m-3">{{ label }}
      <input type="number" name="gender-number">
    </label>
    </div>
  {% endif %}
  </form>
  </div>
{% endif %}
